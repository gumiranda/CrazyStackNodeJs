{
    "compilerOptions": {
      "incremental": true,
      "outDir": "dist",
      "rootDirs": ["src"],
      "target": "es2021",
      "sourceMap": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"]
      },
      "strict": true,
      "noImplicitOverride": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true
    },
    "include": ["src"]
  }